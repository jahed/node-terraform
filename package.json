{
  "name": "@jahed/terraform",
  "version": "1.0.6",
  "description": "Manage Terraform executables via Yarn / NPM.",
  "author": "Jahed",
  "license": "MIT",
  "repository": "https://github.com/jahed/node-terraform",
  "main": "lib/terraform.js",
  "bin": {
    "terraform": "bin/terraform.js"
  },
  "files": [
    "bin",
    "lib",
    "hashes.txt"
  ],
  "scripts": {
    "lint": "prettier -c **/*.{js,ts,md,json,yml}",
    "build": "rimraf ./lib && tsc",
    "test": "./tests/run.sh",
    "version": "./scripts/version.sh",
    "deploy": "yarn lint && yarn version && yarn build && yarn test && yarn publish --non-interactive && git push --follow-tags",
    "version-check": "./scripts/version-check.sh",
    "dependency-check": "./scripts/dependency-check.sh",
    "deps": "yarn upgrade-interactive --latest && yarn upgrade && git add yarn.lock '*package.json' && git commit -m 'build(deps): upgrade dependencies'"
  },
  "keywords": [
    "terraform",
    "hashicorp",
    "infrastructure",
    "automation",
    "executable",
    "wrapper"
  ],
  "funding": [
    {
      "type": "Website",
      "url": "https://jahed.dev/donate"
    },
    {
      "type": "Patreon",
      "url": "https://patreon.com/jahed"
    },
    {
      "type": "PayPal",
      "url": "https://paypal.me/jahed/5"
    },
    {
      "type": "Liberapay",
      "url": "https://liberapay.com/jahed"
    }
  ],
  "dependencies": {
    "@jahed/promises": "^1.0.2",
    "find-cache-dir": "^3.3.2",
    "node-fetch": "^2.6.1",
    "rimraf": "^3.0.2",
    "yauzl": "^2.10.0"
  },
  "devDependencies": {
    "@tsconfig/node12": "^1.0.9",
    "@types/find-cache-dir": "^3.2.0",
    "@types/node": "^14.17.4",
    "@types/node-fetch": "^2.5.10",
    "@types/rimraf": "^3.0.0",
    "@types/yauzl": "^2.9.1",
    "prettier": "^2.3.2",
    "typescript": "4.4.x"
  }
}
